extends ../layout

block body
	h1 EDIT PAGE
	form(action=`/myimagepost/${post.id}/edit`, method='post')

		.form-group
			label(for='title') Title
			textarea.form-control(name='title')= post.title
		.form-group
			label(for='body') Body
			textarea.form-control(name='body')= post.body
		.form-group
			input.btn.btn-primary.btn-lg(type='submit', value='EDIT POST')