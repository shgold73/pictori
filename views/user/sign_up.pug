extends ../layout

block body
	h1.container.heading Sign Up
	include ../errors
	form(action='/user/sign-up', method='post', novalidate)
		div.form
			.form-horizontal
				control-label.col-sm-5(for='firstname') First Name 
				input.form-group(name='firstname', value=user.firstname, autofocus)
			.form-horizontal
				control-label.col-sm-5(for='lastname') Last Name
				input.form-group(name='lastname', value=user.lastname, autofocus)
			.form-horizontal
				control-label.col-sm-5(for='email') Email
				input.form-group(name='email', type='email', value=user.email)
			.form-horizontal
				control-label.col-sm-5(for='password') Password
				input.form-group(name='password', type='password', value=user.password)
			.form-horizontal.button
				control-label.col-sm-4
				input.btn.btn-default(type='submit', value='Sign Up')